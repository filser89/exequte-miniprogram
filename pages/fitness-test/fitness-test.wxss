/* pages/fitness-test/fitness-test.wxss */
@import "/app.wxss";


.exercise-data {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.reshape, .glam, .pt {
  padding-top: 10rpx;
}

.exercise-name {
  border-radius:10px;
  font-size: 1rem;
  padding: 1rem;
}
.exercises-container {
  height: 35rem;
  /* padding: 1rem; */
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
.current-exercise {
  height: 30rem;
  padding: 1rem;
  display: flex;
  width: 90% !important;

  flex-direction: column;
  gap: 1rem;
}
.swiper-container {
  height: 35rem !important;
}

.past-exercise {
  background-color: rgba(255, 255, 255, 0.24);
}

.history-date {
  border-radius:10px;
  font-size: 0.6rem;
  padding: 0.5rem;
  width: fit-content;
  background-color: rgba(41, 200, 228, 0.274);
}
.past-exercise-single {
  height: 35rem !important;
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  width: 90% !important;
}

.exercise-past-performance {
  width:fit-content;
  font-size: 0.7rem;
  border-radius:10px;
  padding: 0.5rem;
}

.submit-container {
  display: flex;
  justify-content: center;
}

.submit, .validate-button {
  border-radius:10px;
  font-size: 1rem;
  padding: 1rem;
  color: whitesmoke;
}
.validate-button {
  margin: 1rem;
}

.exercise-header {
  gap: 1rem;
  display: flex;
  align-items: center;
}


.reshape-text-input,.glam-text-input,.pt-text-input  {
  height: 2rem;
  padding: 0.5rem;
  border-radius:10px;
  background-color: #97daf540;
  border: 1px solid whitesmoke;
  color: white;
}
.reshape-text-input{
background-color: #97daf540;
}
.glam-text-input {
  background-color: #302c7369;
}
.pt-text-input {
  background-color: #97daf540;
}

.glam-placeholder,.reshape-placeholder,.pt-placeholder {
  color: whitesmoke !important;
}

.reshape-data-label,.glam-data-label,.pt-data-label { 
  width: 5em;
  color: whitesmoke;
}

/* workout log validation status */
.glam-validation-status-container,.reshape-validation-status-container,.pt-validation-status-container {
  display: flex;
  padding: 1rem;
  /* align-items: center; */
  justify-content: center;
}
.glam-validation-status, .reshape-validation-status, .pt-validation-status{
  border-radius:10px;
  font-size: 0.7rem;
  padding: 0.3rem;
  width: fit-content;
}

.pending-color {
  background-color: #f2c84c85;
}
.null-color, .none-color {
  background-color: #97daf540;
}
.approved-color {
  background-color: #00ff00a2;
}

.denied-color {
  background-color: #ff0000c4;
}