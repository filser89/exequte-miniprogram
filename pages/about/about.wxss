@import "/app.wxss";

.about {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-top: 70px;
  color: white;
}

.team {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-top: 30px;
  color: white;
}

.paragraph {
  color: white;
  margin: 20px;
  text-align: auto;
  font-weight: lighter;
  font-size: 14px;
}

.address {
  height: 130px;
}

.address-text {
  color: black;
  font-size: 14px;
  width: 60%;
  justify-content: center;
  margin-left: 30px;
  padding-top: 30px;
}

.gym-photo {
  height: 200px;
  margin-top: 10px;
  background-size: cover;

}

.instructor-card {
  margin: 20px;
  display: flex;
  flex-direction: row;
  color: white;
}

.instructor-photo {
  height: 100px;
  width: 100px;
  border-radius: 10px;
}

.instructor-name {
  margin-top: 35px;
  margin-left: 15px;
  font-weight: bold;
  font-size: 16px;

}

.tanc {
