/* pages/profile/profile.wxss */
@import "/app.wxss";

view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx;
}

.red-box {
  background-color: #5C0C17;
  width: 170px;
  height: 130px;
  color: white;
  border-radius: 10px;
}

.big-red-box {
  background-color: #5C0C17;
  width: 100%;
  height: 130px;
  color: white;
  border-radius: 10px;
}

.voucher-box {
  display: flex;
  flex-direction: column;
  background-color: #18181D;
  border-radius: 10px;
  width: 100%;
  height: 100%;
  text-align: center;
  position: center;
  font-size: 18px;
  justify-content: center;
  align-items: center;
}

.no-voucher-box {
  display: flex;
  flex-direction: column;
  background-color: #18181D;
  border-radius: 10px;
  width: 100%;
  height: 100px;
  text-align: center;
  position: center;
  font-size: 18px;
  justify-content: center;
  align-items: center;
}

.my-classes-btn {
  width: 100%;
  background-color: #D8D8D8;
  height: 40px;
  border-radius: 10px;
  text-align: left !important;
  font-size: 18px;
  align-items: center;
}

.membership-box {
  display: flex;
  flex-direction: column;
  background-color: #18181D;
  border: 1px solid #1FDE8D;
  border-radius: 10px;
  width: 100%;
  height: 100%;
  text-align: center;
  position: center;
  font-size: 18px;
  justify-content: center;
  align-items: center;
}

.valid {
  height: 14px;
  width: 100%;
  font-size: 13px;
  text-align: center;
  justify-content: center;
  margin-top: 10px;
  margin-bottom: 14px;
  position: relative;
  text-align: center;
  display: flex;
  align-items: center;
  background-color: #1FDE8D;


}