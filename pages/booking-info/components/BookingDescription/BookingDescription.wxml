<!--pages/booking-info/components/BookingDescription/BookingDescription.wxml-->

<view class='banner d-flex item-center w-100 h-20 '
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url({{session.image_url}});   height:600rpx !important; postition: absolute; z-index: -1">
  
  <view class="pl20">
  </view>
</view>
<view style="background-color: black; border-radius: 27px 27px 0px 0px; margin-top: -30px; z-index: 1; height: 27px ">
</view>
<view class=" bg-black ">
  <view class='text-white' style="margin-left: 30px">
    <view class="text-size-sheader bold">{{session.name}}</view>
    <view class="text-size-sbody" style="margin-top: 5px"> {{session.description}}</view>
    <view class="db-flex" style="justify-content: space-around">
      <view class="text-size-sbody" style="margin-top: 20px; display:flex">
        <image src='/images/time.png' class='icon-time2' style="margin-right: 5px; "> </image>{{session.duration}} {{strings.min}}
        <image src='/images/fire.png' class='icon-fire2' style="margin-right: 5px; margin-left: 50px"> </image>
        {{session.calories}} {{strings.kcal}}
      </view>
    </view>
  </view>
  <view class="coach-card text-white" >
      <view>
        <image style="width: 60px; height: 60px; radius: 50%; z-index: 1; margin-right: 20px"
          src="{{instructor.image_url}}"></image>
          {{strings.coach}} {{instructor.first_name}}
      </view>
      <!-- Last Name: {{instructor.last_name}} -->
      <view class='text-size-sbody' style="margin-top: 5px; margin-left: 10px; padding: 5px"> {{strings.bio}} {{instructor.bio}}
      </view>

    </view>



  <view class="coach-card text-white tl">
    <view class="text-size-sbody ml">
      <image src='/images/information.png' class='icon-time' style="margin-right: 5px; "> </image>{{strings.cancellation_1}}{{session.cancel_before}}{{strings.cancellation_2}}
    </view>
    <view class="text-size-sbody ml"> {{strings.price}}{{session.price}}{{strings.currency}}</view>
    <view class="text-size-sbody ml"> {{session.from}}-{{session.to}}</view>
    <view class="text-size-sbody ml"> {{strings.date}}{{session.date_locale}}</view>
  </view>

  <view wx:if="{{session.photos_urls && session.photos_urls.length}}" class="coach-card text-white tl">
    <view wx:for="{{session.photos_urls}}" wx:for-item="photo" wx:for-index="i" wx:key="unique"  >
      <image show-menu-by-longpress="true"src="{{photo}}"></image>
    </view>
  </view>
  <view wx:if="{{session.videos_urls && session.videos_urls.length}}" class="coach-card text-white tl">
    <view wx:for="{{session.videos_urls}}" wx:for-item="video" wx:for-index="i" wx:key="unique"  >
      <video src="{{video}}"></video>
    </view>
  </view>

</view>