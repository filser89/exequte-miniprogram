    <view class="text-size-sbody ml"> Price: {{session.price}}</view>
    <view class="text-size-sbody ml"> {{session.from}}-{{session.to}}</view>
    <view class="text-size-sbody ml">    Date: {{session.date}}</view>
  </view>

 
