</view>

<view style="width: 100%; height: 100%; background-color: #555555; color: #5C0C17 ; margin-top: 25px; " >
  <view class="bold" style="margin-left: 25px; padding: 5px;">Check Other Dates <image src='/images/Triangle.png' class='icon-time2' style="margin-right: 5px; margin-left: 150px; margin-top: 7px"></image></view>
    <OtherDates bindchangeddate="handleChangedDate" session="{{session}}" selectedDateId="{{session.id}}"
      selectedInstructorId="{{session.instructor_id}}" />
  </view>
  <view class="coach-card text-white tl" style="margin-top: 10px; margin-right: 20px; margin-left: 20px">
