<!--pages/class-info/class-info.wxml-->
<!-- <text>pages/class-info/class-info.wxml</text> -->
<ClassDescription session="{{session}}">
  <CoachCard instructor="{{instructor}}" />
  <view>
    <OtherDates bindchangeddate="handleChangedDate" session="{{session}}" selectedDateId="{{session.id}}"
      selectedInstructorId="{{session.instructor_id}}" />
  </view>
</ClassDescription>
<view wx:if="{{user.first_name}}">
  <ActionButton bindqueuedup="handleQueuedUp" itemId="{{session.id}}" action="{{session.btn_pattern.action}}"
    btnDisabled="{{session.btn_pattern.disabled}}">
    {{session.btn_pattern.text}} {{session.btn_pattern.disabled ? "" : session.price}}
  </ActionButton>
</view>
<view wx:else>
  <GetInfoButton itemId="{{session.id}}">
    Click
  </GetInfoButton>
</view>