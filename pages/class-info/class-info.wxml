<!--pages/class-info/class-info.wxml-->

<ClassDescription session="{{session}}" instructor="{{instructor}}" bindchangeddate="handleChangedDate" >
  
</ClassDescription>
<view style="height: 20px; background-color: black"></view>

<view wx:if="{{user.first_name}}" >
  <view bindqueuedup="handleQueuedUp" itemId="{{session.id}}" action="{{session.btn_pattern.action}}"
    btnDisabled="{{session.btn_pattern.disabled}}" >
    {{session.btn_pattern.text}} {{session.btn_pattern.disabled ? "" : session.price}}
</view>
</view>
<view wx:else >
  <view itemId="{{session.id}}" class="text-capitalize class-info-book-button">
    BOOK NOW
  </view>
</view>