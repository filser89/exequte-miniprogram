/* pages/booking/components/AccessOptions/AccessOptions.wxss */
@import "/app.wxss";

.button-option {
  background-color: #D8D8D8;
  color: #000000;
  display: grid;
  grid-template-columns: 80% 20%;
  padding: 0 20px;
  height: 72px;
  font-weight: bold;
  font-size: 16px;
  margin: 10px;
  border-radius: 15px;
}

.button-option-active {
  background-color: #5C0C17;
  color: white;
  border: 2px solid white;
  display: grid;
  grid-template-columns: 80% 20%;
  height: 72px;
  padding: 0 20px;
  font-weight: bold;
  font-size: 16px;
  margin: 10px;
  border-radius: 15px;
}

.sm-text {
  font-size: 12px;
}

.d-flex{
  display: flex;
}

.flex-column {
  flex-direction: column;
}
.content-center {
  justify-content: center;
}

.items-start {
  align-items: flex-start;
}

.items-center{
  align-items: center;
}