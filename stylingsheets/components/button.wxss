/* RESET SYSTEM STYLE */
button::after {
  border: none;
}

button {
  background-color: unset;
}

/* To be used when button is not button element e.g. navigator */
.button {
  /* padding-left:14px;
  padding-right:14px;
  line-height:2.5; */
}

/* OVERWIRTES SYSTEM DEFAULT */
button cover-view {
  display: flex;
}

.btn {
  text-align:center;
  /* padding:10px; */
  border-radius:10px;
}

.btn-sm {
  text-align:center;
  /* padding:5px; */
  border-radius:5px;
}

.btn-transparent {
  background-color:white;
  color:#F08302;
  font-weight:bold;
}

.btn-orange {
  background-color:#F08302;
  color:white;
  font-weight:bold;
}

.btn-red {
  background-color:#FFEFEF;
  color:#F98A8B;
}

.btn-ghost-orange {
  border: solid 1px #F08302;
  color:#F08302;
  font-weight:bold;
}


/* FLOATING BUTTON */
.btn-float {
  position:fixed;
  right:20px;
  bottom:200rpx;
  opacity:0.7;
}

.create-lost {
  position:fixed;
  right:20px;
  bottom:220px;
}

.create-found {
  position:fixed;
  right:20px;
  bottom:160px;
}

.language-button {
  position: fixed; 
	top: 5px; 
  right: 5px; 
  background-color: #555555;
  width: 35px !important;
  height: 30px;
  border-radius: 10px;
  color: white;
  padding-left: 3px;
  
  
}