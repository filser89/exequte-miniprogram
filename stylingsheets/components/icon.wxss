.icon {
  height:50rpx;
  width:50rpx;
}

.icon-micro {
  height: 10rpx;
  width: 15rpx;
  margin-left: 3px;
}

.icon-mini {
  height: 15px;
  width: 15px;
}

.icon-time {
  height: 13px;
  width: 13px;
  filter: brightness(0) invert(1);
}
.icon-fire {
  height: 13px;
  width: 10px;
}

.icon-time2 {
  filter: brightness(0.1) invert(1);
  height: 16px;
  width: 16px;
}
.icon-fire2 {
  height: 16px;
  width: 13px;
}

.icon-sm {
  width:20px;
  height:20px;
}

.icon-md {
  width: 40px;
  height: 40px;
}

.icon-lg {
  height: 150rpx;
  width: 200rpx;
  margin-left: -30rpx;
