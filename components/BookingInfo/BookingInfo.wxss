/* pages/booking/components/BookingInfo/BookingInfo.wxss */
@import "/app.wxss";

.card-booking {
  width:90%;
  height: 350px;
  background-color: #18181D;
  border-radius: 10px;
  margin: 0 auto;
  padding: 5px;
  color: white;
}

.card-image-booking {
  width: 100px;
  height: 100px;
  border-radius: 10px;
  background-size:cover;
  background-repeat: no-repeat;
  background-position:center;
  margin-right: 10px;
}

.block {
  display: flex;
  justify-content: space-between; 
  margin: 20rpx;
}
text {
  /* margin-right: 30rpx; */
  color: white;
  /* width: 30%; */
  font-size: 14px;
}
input {
  padding: 2px;
  border-radius: 2px;
  width: 60%;
  margin-right: 5px;
  margin-left: 10px;
  background-color: white;
  height: 33px;
  color: black;
  padding-left: 15px;
  
}

.icon-time-booking {
  height: 15px;
  width: 15px;
  margin-right: 5px;
}