@import "/app.wxss";

.card-booking {
  width:90%;
  height: 400rpx;
  background-color: #18181D;
  border-radius: 10px;
  /* margin-bottom: 12px; */
  position: center;
  margin: 10px;
  margin-right: 10px;
  padding: 5px;
  color: white;
  justify-content: center;
}

.card-image-booking {
  width: 100px;
  height: 100px;
  border-radius: 10px;
  background-size:cover;
  background-repeat: no-repeat;
  background-position:center;
  margin-right: 10px;
  position: absolute;
	top: 25px; 
  right: 20px; 
}

.block {
  display: flex;
  flex-direction: row;
  align-items: space-between; 
  margin: 20rpx;
  margin-bottom: 100px;
}
text {
  /* margin-right: 30rpx; */
  color: white;
  /* width: 30%; */
  font-size: 14px;
}
input {
  padding: 2px;
  border-radius: 2px;
  width: 60%;
  margin-right: 5px;
  margin-left: 10px;
  background-color: white;
  height: 33px;
  color: black;
  padding-left: 15px;
  
}

.icon-time-booking {
  height: 15px;
  width: 15px;
  margin-right: 5px;
}